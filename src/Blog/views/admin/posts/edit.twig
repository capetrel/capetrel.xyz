{% extends '@admin/layout.twig' %}

{% block title "Edition d'un article" %}

{% block body %}
    <h1>Éditer l'article {{ item.name }}</h1>

    <form action="{{ path(routePrefix ~ '.edit', {id: item.id}) }}" method="post" enctype="multipart/form-data">

        {% include viewPath ~ '/form.twig' %}

        <button class="btn btn-primary" type="submit">Éditer</button>

    </form>

{% endblock %}