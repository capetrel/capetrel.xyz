{% extends 'layout.twig' %}

{% block title post.name %}

{% block body %}

    <h1>{{ post.name }}</h1>

    <p class="text-muted">

        {% if post.category_id %}
            <a href="{{ path('blog.category', {slug: post.categorySlug}) }}" title="{{ post.categoryName }}">{{ post.categoryName }}</a>
        {% endif %}


        {{ post.createdAt.format('d/m/Y H:i') }}
    </p>
    <p>
        {% if post.image %}
            <img class="img-responsive" src="{{ post.imageUrl }}" alt="image de {{ post.name }}" style="width: 100%;">
        {% endif %}
    </p>
    <p>
        {{ post.content | nl2br }}
    </p>



{% endblock %}