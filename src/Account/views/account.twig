{% extends '@admin/layout.twig' %}

{% block body %}

    <h1>Mon compte</h1>

    <form action="" method="post">
        {{ csrf_input() }}

        <div class="row">
            <div class="col-md-6">
                {% if user.avatar %}
                    <img src="{{ user.avatar }}" style="width: 100%;">
                {% endif %}
                {{ field('avatar', user.avatar, "Votre avatar :") }}

            </div>
            <div class="col-md-6">
                {{ field('username', user.username, "Votre pseudo :") }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                {{ field('firstname', user.firstname, "Votre prénom :") }}
            </div>
            <div class="col-md-6">
                {{ field('lastname', user.lastname, "Votre nom :") }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                {{ field('email', user.email, "Votre courriel :") }}
            </div>
            <div class="col-md-6">
                {{ field('birthday', user.birthday, "Votre date de naissance :", {class: 'datepicker'}) }}
            </div>
        </div>

        <h5>Changer de mot de passe</h5>
        <p class="text-muted">Laisser vide pour ne rien modifier</p>
        {{ field('password', null, "Mot de passe", {type: 'password'}) }}
        {{ field('password_confirm', null, "Confirmer le mot de passe", {type: 'password'}) }}

        <div class="row">
            <div class="col-md-4">
                {{ field('tel_1', user.tel1, "Premier Numéro de téléphone :") }}
            </div>
            <div class="col-md-4">
                {{ field('tel_2', user.tel2, "Deuxième Numéro de téléphone :") }}
            </div>
            <div class="col-md-4">
                {{ field('driver_licence', user.driverLicence, "Votre permis de conduire :") }}
            </div>
        </div>

        {{ field('address', user.address, "Votre adresse complète :", {type: 'textarea'}) }}

        {{ field('description', user.description, "Votre biographie :", {type: 'textarea'}) }}

        <button class="btn btn-primary">Modifier les infos</button>
    </form>

{% endblock %}